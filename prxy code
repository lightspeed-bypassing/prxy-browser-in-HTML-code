<body>

<div id="sidebar">
    <h3>Quick Links</h3>
    <a href="#" onclick="newTab('https://www.wikipedia.org')">Wikipedia</a>
    <a href="#" onclick="newTab('https://www.reddit.com')">Reddit</a>
    <a href="#" onclick="newTab('https://news.ycombinator.com')">Hacker News</a>
    <a href="#" onclick="newTab('https://www.github.com')">GitHub</a>
</div>

<div id="main">
    <div class="tab-bar" id="tab-bar"></div>

    <div id="controls">
        <button onclick="newTab()">+</button>
        <input type="text" id="url" placeholder="Enter URL or search..." />
        <button onclick="goToURL()">Go</button>
    </div>

    <div id="browser-area"></div>
</div>

<script>
let tabs = [];
let currentTab = null;

// Homepage URL that is embeddable
const HOMEPAGE = "https://htmlpreview.github.io/?https://raw.githubusercontent.com/mdn/learning-area/master/html/introduction-to-html/hello-world.html";

function newTab(url = HOMEPAGE) {
    const tabId = Date.now();

    const tab = {
        id: tabId,
        url: url,
        iframe: document.createElement("iframe")
    };

    tab.iframe.src = url;
    tabs.push(tab);

    const tabButton = document.createElement("div");
    tabButton.className = "tab";
    tabButton.id = "tab-" + tabId;
    tabButton.innerHTML = "Tab " + tabs.length +
        "<span class='close-btn' onclick='closeTab(event, " + tabId + ")'>Ã—</span>";
    tabButton.onclick = () => switchTab(tabId);

    document.getElementById("tab-bar").appendChild(tabButton);
    document.getElementById("browser-area").appendChild(tab.iframe);

    switchTab(tabId);
}

function switchTab(id) {
    currentTab = tabs.find(t => t.id === id);
    tabs.forEach(t => t.iframe.style.display = "none");
    currentTab.iframe.style.display = "block";

    document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
    document.getElementById("tab-" + id).classList.add("active");

    document.getElementById("url").value = currentTab.url;
}

function goToURL() {
    if (!currentTab) return;

    let input = document.getElementById("url").value.trim();
    let url;

    // Detect URL or search query
    if (input.startsWith("http://") || input.startsWith("https://")) {
        url = input;
    } else if (input.includes(".")) {
        url = "https://" + input;
    } else {
        // Use a custom embeddable search page
        url = "https://htmlpreview.github.io/?https://raw.githubusercontent.com/mdn/learning-area/master/html/introduction-to-html/hello-world.html?q=" + encodeURIComponent(input);
    }

    currentTab.url = url;
    currentTab.iframe.src = url;
}

document.getElementById("url").addEventListener("keydown", e => {
    if (e.key === "Enter") goToURL();
});

function closeTab(event, id) {
    event.stopPropagation();

    const index = tabs.findIndex(t => t.id === id);
    if (index === -1) return;

    const tab = tabs[index];

    tab.iframe.remove();
    document.getElementById("tab-" + id).remove();

    tabs.splice(index, 1);

    if (currentTab && currentTab.id === id) {
        if (tabs.length > 0) switchTab(tabs[0].id);
        else currentTab = null;
    }
}

// Start with homepage
newTab();
</script>

</body>
</html>
