<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Dark Mini Browser With Embeddable Search Engine</title>
<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: #0f0f0f;
        color: #eee;
    }

    .tab-bar {
        display: flex;
        background: #111;
        border-bottom: 1px solid #333;
        padding: 5px;
        overflow-x: auto;
    }

    .tab {
        padding: 8px 15px;
        margin-right: 5px;
        background: #222;
        color: #ccc;
        border-radius: 5px;
        cursor: pointer;
        user-select: none;
        display: flex;
        align-items: center;
    }

    .tab.active {
        background: #444;
        color: #fff;
    }

    .close-btn {
        margin-left: 10px;
        color: #999;
        cursor: pointer;
        font-weight: bold;
    }

    #controls {
        display: flex;
        background: #111;
        padding: 10px;
        border-bottom: 1px solid #333;
        gap: 10px;
    }

    #url {
        flex: 1;
        padding: 8px;
        background: #222;
        color: #eee;
        border: 1px solid #444;
        border-radius: 4px;
    }

    button {
        padding: 8px 12px;
        background: #333;
        color: #eee;
        border: 1px solid #555;
        border-radius: 4px;
        cursor: pointer;
    }

    button:hover {
        background: #444;
    }

    iframe {
        width: 100%;
        height: calc(100vh - 110px);
        border: none;
        background: #000;
    }
</style>
</head>

<body>

<div class="tab-bar" id="tab-bar"></div>

<div id="controls">
    <button onclick="newTab()">+</button>
    <input type="text" id="url" placeholder="Enter URL or Search..." />
    <button onclick="goToURL()">Go</button>
</div>

<div id="browser-area"></div>

<script>
let tabs = [];
let currentTab = null;

// Default tab loads embeddable search engine homepage
function newTab(url = "https://lite.duckduckgo.com/lite/") {
    const tabId = Date.now();

    const tab = {
        id: tabId,
        url: url,
        iframe: document.createElement("iframe")
    };
    tab.iframe.src = url;

    tabs.push(tab);

    const tabButton = document.createElement("div");
    tabButton.className = "tab";
    tabButton.id = "tab-" + tabId;
    tabButton.innerHTML = "Tab " + tabs.length +
        "<span class='close-btn' onclick='closeTab(event, " + tabId + ")'>Ã—</span>";
    tabButton.onclick = () => switchTab(tabId);

    document.getElementById("tab-bar").appendChild(tabButton);
    document.getElementById("browser-area").appendChild(tab.iframe);

    switchTab(tabId);
}

function switchTab(id) {
    currentTab = tabs.find(t => t.id === id);

    tabs.forEach(t => t.iframe.style.display = "none");
    currentTab.iframe.style.display = "block";

    document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
    document.getElementById("tab-" + id).classList.add("active");

    document.getElementById("url").value = currentTab.url;
}

function goToURL() {
    if (!currentTab) return;

    let input = document.getElementById("url").value.trim();
    let url;

    // URL or search detection
    if (input.startsWith("http://") || input.startsWith("https://")) {
        url = input;
    } else if (input.includes(".")) {
        // Treat it as a domain
        url = "https://" + input;
    } else {
        // Use embeddable DuckDuckGo Lite
        url = "https://lite.duckduckgo.com/lite/?q=" + encodeURIComponent(input);
    }

    currentTab.url = url;
    currentTab.iframe.src = url;
}

document.getElementById("url").addEventListener("keydown", e => {
    if (e.key === "Enter") goToURL();
});

function closeTab(event, id) {
    event.stopPropagation();

    const index = tabs.findIndex(t => t.id === id);
    if (index === -1) return;

    const tab = tabs[index];

    tab.iframe.remove();
    document.getElementById("tab-" + id).remove();

    tabs.splice(index, 1);

    if (currentTab && currentTab.id === id) {
        if (tabs.length > 0) switchTab(tabs[0].id);
        else currentTab = null;
    }
}

newTab();
</script>

</body>
</html>
