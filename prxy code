<body>

<!-- SIDEBAR -->
<div id="sidebar">
    <div class="side-link" onclick="loadInTab('https://google.com')">Google</div>
    <div class="side-link" onclick="loadInTab('https://youtube.com')">YouTube</div>
    <div class="side-link" onclick="loadInTab('https://github.com')">GitHub</div>
    <div class="side-link" onclick="loadInTab('https://wikipedia.org')">Wikipedia</div>
    <div class="side-link" onclick="loadInTab('https://www.startpage.com')">Search</div>
</div>

<!-- MAIN BROWSER AREA -->
<div id="main">
    <div class="tab-bar" id="tab-bar"></div>

    <div id="controls">
        <button onclick="newTab()">+</button>
        <button onclick="goHome()">üè†</button>
        <input type="text" id="url" placeholder="Enter URL or Search..." />
        <button onclick="goToURL()">Go</button>
    </div>

    <div id="browser-area"></div>
</div>

<script>
let tabs = [];
let currentTab = null;

// HOMEPAGE WITH SHORTCUT GRID
const HOMEPAGE = `data:text/html,
<html>
<head>
<style>
body {
    background:#0f0f0f;
    color:white;
    font-family:Arial;
    margin:0;
    padding:20px;
    text-align:center;
}
h1 { font-size:28px; }
.grid {
    display:grid;
    grid-template-columns:repeat(auto-fit, minmax(150px, 1fr));
    gap:20px;
    padding:20px;
}
.card {
    background:#1c1c1c;
    padding:20px;
    border-radius:10px;
    cursor:pointer;
    transition:0.2s;
    font-size:18px;
}
.card:hover {
    background:#333;
    transform:scale(1.05);
}
</style>
</head>
<body>
<h1>Welcome</h1>
<div class="grid">
    <div class="card" onclick="parent.loadInTab('https://google.com')">Google</div>
    <div class="card" onclick="parent.loadInTab('https://youtube.com')">YouTube</div>
    <div class="card" onclick="parent.loadInTab('https://github.com')">GitHub</div>
    <div class="card" onclick="parent.loadInTab('https://wikipedia.org')">Wikipedia</div>
    <div class="card" onclick="parent.loadInTab('https://www.startpage.com')">Startpage Search</div>
</div>
</body>
</html>
`;

function newTab(url = HOMEPAGE) {
    const tabId = Date.now();

    const tab = {
        id: tabId,
        url: url,
        iframe: document.createElement("iframe")
    };
    tab.iframe.src = url;

    tabs.push(tab);

    const tabButton = document.createElement("div");
    tabButton.className = "tab";
    tabButton.id = "tab-" + tabId;
    tabButton.innerHTML =
        "Tab " + tabs.length +
        "<span class='close-btn' onclick='closeTab(event, " + tabId + ")'>√ó</span>";
    tabButton.onclick = () => switchTab(tabId);

    document.getElementById("tab-bar").appendChild(tabButton);
    document.getElementById("browser-area").appendChild(tab.iframe);

    switchTab(tabId);
}

function switchTab(id) {
    currentTab = tabs.find(t => t.id === id);

    tabs.forEach(t => t.iframe.style.display = "none");
    currentTab.iframe.style.display = "block";

    document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
    document.getElementById("tab-" + id).classList.add("active");

    document.getElementById("url").value = currentTab.url;
}

// Load a URL into the current tab
function loadInTab(url) {
    if (!currentTab) return;
    currentTab.url = url;
    currentTab.iframe.src = url;
    document.getElementById("url").value = url;
}

function goToURL() {
    if (!currentTab) return;

    let input = document.getElementById("url").value.trim();
    let url;

    // If input looks like a URL
    if (input.startsWith("http")) url = input;
    else if (input.includes(".")) url = "https://" + input;
    // Otherwise treat as search using Startpage
    else url = "https://www.startpage.com/sp/search?q=" + encodeURIComponent(input);

    loadInTab(url);
}

document.getElementById("url").addEventListener("keydown", e => {
    if (e.key === "Enter") goToURL();
});

function goHome() {
    loadInTab(HOMEPAGE);
}

function closeTab(event, id) {
    event.stopPropagation();

    const index = tabs.findIndex(t => t.id === id);
    if (index === -1) return;

    const tab = tabs[index];
    tab.iframe.remove();
    document.getElementById("tab-" + id).remove();
    tabs.splice(index, 1);

    if (tabs.length > 0) switchTab(tabs[0].id);
    else currentTab = null;
}

// Start with one tab (homepage)
newTab();
</script>

</body>
</html>
