    }

    /* Sidebar for quick links */
    #sidebar {
        width: 200px;
        background: #111;
        padding: 10px;
        box-sizing: border-box;
        border-right: 1px solid #333;
    }

    #sidebar h3 {
        margin-top: 0;
        font-size: 16px;
        color: #aaa;
    }

    #sidebar a {
        display: block;
        color: #ccc;
        text-decoration: none;
        margin: 5px 0;
        padding: 5px;
        border-radius: 4px;
    }

    #sidebar a:hover {
        background: #222;
        color: #fff;
    }

    /* Main browser area */
    #main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .tab-bar {
        display: flex;
        background: #111;
        border-bottom: 1px solid #333;
        padding: 5px;
        overflow-x: auto;
    }

    .tab {
        padding: 8px 15px;
        margin-right: 5px;
        background: #222;
